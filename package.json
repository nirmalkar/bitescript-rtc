{
  "type": "commonjs",
  "name": "bitescript-rtc",
  "version": "1.0.0",
  "description": "Real-time communication service for BiteScript",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.js --ignore-pattern 'dist/'",
    "lint:fix": "eslint . --ext .ts,.js --fix --ignore-pattern 'dist/'",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check",
    "prepare": "npm run build",
    "build": "tsc --project tsconfig.prod.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node -r module-alias/register dist/index.js",
    "ci:check": "npm run check -- --max-warnings=0",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biteScript/bitescript-rtc.git"
  },
  "keywords": [
    "webrtc",
    "realtime",
    "signaling",
    "typescript"
  ],
  "author": "BiteScript Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/biteScript/bitescript-rtc/issues"
  },
  "homepage": "https://github.com/biteScript/bitescript-rtc#readme",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.7.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "file-stream-rotator": "^1.0.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "module-alias": "^2.2.2",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^8.0.1",
    "ws": "^8.18.3",
    "zod": "^4.1.8"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
